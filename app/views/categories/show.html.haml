%p#notice= notice

%p
  %h2
    Title:
    = @category.title
  %h4
    Description:
    = @category.description

%p
  %h2 Tasks
  = render @category.tasks

%p
  %h2 New Task
  = render "tasks/form"

.btn-group
  = button_to 'Edit', edit_category_path(@category), method: :get, class: "btn btn-primary"
  = button_to 'Back', categories_path, method: :get, class: "btn btn-warning"
