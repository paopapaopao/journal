%p#notice= notice

= form_for :query, url: categories_path, method: :get do |f|
  .form-group
    = f.text_field :title, placeholder: 'Search Categories (title or description)', value: params.dig('query', 'title'), class: "form-control"
  .actions
    = f.submit 'Search'

= link_to 'New Category', new_category_path, class: "btn btn-primary", data: { bs_toggle: 'modal', bs_target: '#newCategoryModal', remote: true }

-# new category modal
#newCategoryModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "newCategoryModalLabel", tabindex: "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %h5#newCategoryModalLabel.modal-title New Category
        %button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "modal", type: "button"}
      #newCategoryForm

-# edit category modal
#editCategoryModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "editCategoryModalLabel", tabindex: "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %h5#editCategoryModalLabel.modal-title Edit Category
        %button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "modal", type: "button"}
      #editCategoryForm

-# show category modal
#showCategoryModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "showCategoryModalLabel", tabindex: "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %h5#showCategoryModalLabel.modal-title Show Category
        %button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "modal", type: "button"}
      #showCategory

%h1 Categories
#categories
  - @categories.each do |category|
    = render 'category', category: category
