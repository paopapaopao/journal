%div{id: "category-#{category.id}", class: "card"}
  .card-body
    %h4.card-title= link_to category.title, category
    %h6.card-text= category.description
    .btn-group
      = link_to 'Edit', edit_category_path(category), data: { bs_toggle: 'modal', bs_target: '#editCategoryModal', remote: true }, class: "btn btn-primary"
      = link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?', remote: true }, class: "btn btn-danger"
    %table.table.table-bordered.table-hover.table-dark
      %thead
        %tr
          %th Task
          %th Due Date
          %th Status
          %th{:colspan => "3"}
      %tbody
        - category.tasks.each do |task|
          %tr
            %td= task.description
            %td= task.due_date
            %td= task.status
            %td
              = link_to 'Destroy', [task.category, task], confirm: 'Are you sure?', method: :delete
